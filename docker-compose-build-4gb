version: '3.8'

services:
  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: nextjs_app
    restart: always
    ports:
      - "3000:3000"
    # PENTING: 'npx tsc' dihapus dari sini. Lakukan kompilasi di Dockerfile (Build Stage).
    command: >
      sh -c "npx prisma db push && 
             npx prisma generate && 
             node server.js"
    environment:
      - DATABASE_URL=${DATABASE_URL}
      - REDIS_URL=redis://redis_prod:6379
      - KAFKA_BROKER=kafka_prod:9092
      - NODE_ENV=production
    extra_hosts:
      - "dbserver:72.61.208.177"
    depends_on:
      redis:
        condition: service_healthy
      kafka:
        condition: service_started
    deploy:
      resources:
        limits:
          memory: 1G      # Limit keras untuk runtime Next.js
        reservations:
          memory: 512M    # Garansi RAM minimal
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  redis:
    image: redis:7-alpine
    container_name: redis_prod
    restart: always
    # Maxmemory diset ke 256MB agar tidak memakan RAM host jika data membludak
    command: redis-server --maxmemory 256mb --maxmemory-policy allkeys-lru --loglevel warning
    volumes:
      - redis_data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
    deploy:
      resources:
        limits:
          memory: 384M
        reservations:
          memory: 128M

  kafka:
    image: apache/kafka:3.8.0
    container_name: kafka_prod
    restart: always
    environment:
      - KAFKA_NODE_ID=1
      - KAFKA_PROCESS_ROLES=broker,controller
      - KAFKA_LISTENERS=PLAINTEXT://:9092,CONTROLLER://:9093
      - KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka_prod:9092
      - KAFKA_CONTROLLER_LISTENER_NAMES=CONTROLLER
      - KAFKA_LISTENER_SECURITY_PROTOCOL_MAP=CONTROLLER:PLAINTEXT,PLAINTEXT:PLAINTEXT
      - KAFKA_CONTROLLER_QUORUM_VOTERS=1@kafka_prod:9093
      - KAFKA_LOG_DIRS=/var/lib/kafka/data
      - KAFKA_OFFSETS_TOPIC_REPLICATION_FACTOR=1
      - KAFKA_TRANSACTION_STATE_LOG_REPLICATION_FACTOR=1
      - KAFKA_TRANSACTION_STATE_LOG_MIN_ISR=1
      # KRUSIAL: Heap RAM dibatasi total 1GB (512MB start, 1GB max)
      - KAFKA_HEAP_OPTS=-Xms512M -Xmx1G
    volumes:
      - kafka_data:/var/lib/kafka/data
    deploy:
      resources:
        limits:
          memory: 1.5G    # Memberi ruang napas untuk overhead JVM
        reservations:
          memory: 800M

volumes:
  redis_data:
  kafka_data: